<UserControl x:Class="C19K.Wpf.CustomControls.TileChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:C19K.Wpf.CustomControls"
             mc:Ignorable="d" 
             x:Name="TileChartControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{Binding ElementName=TileChartControl, Path=DataContext.TileColor}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="2" Foreground="{Binding ElementName=TileChartControl, Path=DataContext.FontColor}" 
                   Text="{Binding ElementName=TileChartControl, Path=DataContext.Value}"/>

        <TextBlock Grid.Row="3" Foreground="{Binding ElementName=TileChartControl, Path=DataContext.FontColor}" 
                   Text="{Binding ElementName=TileChartControl, Path=DataContext.Title}"/>
    </Grid>
</UserControl>
